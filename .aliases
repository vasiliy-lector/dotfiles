vimdt() {
    vim -p `git diff --name-status | grep -E '^[AM]' | awk ' {print $2} ' | xargs ls 2>/dev/null`
}
vimdv() {
    vim -O `git diff --name-status | grep -E '^[AM]' | awk ' {print $2} ' | xargs ls 2>/dev/null`
}
