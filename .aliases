gsta() {
    git stash apply stash@{$1}
}
gstp() {
    git stash pop stash@{$1}
}
alias gstl='git stash list'
gdn() {
    oldIFS=$IFS;
    IFS=$'\n';
    files=(`git diff --name-only`);
    IFS=$oldIFS;
    echo "${files[$1 - 1]}";
}
alias ga1='git add `gdn 0`';
alias ga2='git add `gdn 1`';
alias ga3='git add `gdn 2`';
alias ga4='git add `gdn 3`';
alias ga5='git add `gdn 4`';
alias ga6='git add `gdn 5`';
alias ga7='git add `gdn 6`';
alias ga8='git add `gdn 7`';
alias ga9='git add `gdn 8`';

