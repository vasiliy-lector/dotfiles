# Git
alias ga='git add --all'
alias gan='git add --intent-to-add .'
gc() {
    staged=$(git diff --staged --name-only);
    if [[ -z $staged ]]; then
        git add --all . && git commit -n -m "$@"
    else
        git commit -n -m "$@"
    fi
}
alias gca='git commit -n --amend'
